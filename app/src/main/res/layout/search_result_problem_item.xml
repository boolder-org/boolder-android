<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorSurface">

    <androidx.cardview.widget.CardView
        android:id="@+id/circuit_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/circuit_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="20" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/problem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="200dp"
        android:textColor="?colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toStartOf="@id/problem_grade"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/circuit_color"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="La TraversÃ©e du Surplom d'Isatis" />

    <TextView
        android:id="@+id/problem_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toStartOf="@id/problem_area"
        app:layout_constraintStart_toEndOf="@id/problem_name"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="7a+" />

    <TextView
        android:id="@+id/problem_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="Rocher Canon" />

</androidx.constraintlayout.widget.ConstraintLayout>
